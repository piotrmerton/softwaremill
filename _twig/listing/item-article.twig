{% if filters %}

	{% if article.author.name in filters.authors %}

		{% set matchedAuthor = true %}

	{% endif %}

{% endif %}

<li class="list__item item--article{% if matchedAuthor %} article--matched-author{% endif %}">

	<a href="{{ article.url }}">

		{% include '../blocks/author.twig' with {author : article.author, article : article} %}

		<h3 class="article__title">{{ article.title }}</h3>
	</a>

	{% if article.tags %}
		<ul class="article__tags tags__list">
			{% for tag in article.tags %}

				{% if filters %}

					{% if tag in filters.keywords %}

						{% set selected = true %}

					{% endif %}

				{% endif %}

				<li class="list__item item--tag{% if selected %} tag--selected{% endif %}">

					{# should you don't want tag to be clickable, REPLACE <a> with <span> #}

					<a href="#">{{ tag }}</a>

				</li>
			{% endfor %}
		</ul>
	{% endif %}

</li>